<div id="contact-page" class="container">
  <div class="bg">
    <div class="row">       
      <div class="col-sm-12">                 
        <h2 class="title text-center">Contact <strong>Us</strong></h2>
      </div>          
    </div>      
    <div class="row">   
      <div class="col-sm-8">
        <div class="contact-form">
          <h2 class="title text-center">Get In Touch</h2>
          <div class="status alert alert-success" style="display: none"></div>

          <%= form_with url: contact_path, name:"contact-form", id: "main-contact-form", class: "contact-form row" do |f| %>
            <div class="form-group col-md-6">
              <%= f.text_field :name, class: "form-control", required: true, placeholder:"Name" %>
            </div>

            <div class="form-group col-md-6">
              <%= f.email_field :email, class: "form-control", required: true, placeholder:"Email" %>
            </div>

            <div class="form-group col-md-12">
              <%= f.text_field :subject, class: "form-control", required: true, placeholder:"Subject" %>
            </div>

            <div class="form-group col-md-12">
              <%= f.text_area :message, rows: 10, class: "form-control", required: true, placeholder:"Message" %>
            </div>

            <div class="form-group col-md-12">
              <%= f.submit :submit, class: "btn btn-primary pull-right" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="contact-info">
          <h2 class="title text-center">Contact Info</h2>
          <address>
            <p>E-Shopper Inc.</p>
            <p>935 W. Webster Ave New Streets Chicago, IL 60614, NY</p>
            <p>Newyork USA</p>
            <p>Mobile: +2346 17 38 93</p>
            <p>Fax: 1-714-252-0026</p>
            <p>Email: info@e-shopper.com</p>
          </address>
          <div class="social-networks">
            <h2 class="title text-center">Social Networking</h2>
            <ul>
              <li>
                <%= link_to("#") do %>
                  <i class= "fa fa-facebook"></i>
                <% end %>
              </li>
              <li>
                <%= link_to("#") do %>
                  <i class= "fa fa-twitter"></i>
                <% end %>
              </li>
              <li>
                <%= link_to("#") do %>
                  <i class= "fa fa-google-plus"></i>
                <% end %>
              </li>
              <li>
                <%= link_to("#") do %>
                  <i class= "fa fa-youtube"></i>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>          
    </div>  
  </div>  
</div><!--/#contact-page-->
