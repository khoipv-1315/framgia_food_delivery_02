<div class="category-tab"><!--category-tab-->
  <div class="col-sm-12">
    <ul class="nav nav-tabs">
      <li class="active">
        <%= link_to "#special_food", :data => {:toggle => "tab"} do %>
          <%= t ".special_food" %>
        <% end %>
      </li>
      <li>
        <%= link_to "#discount_food", :data => {:toggle => "tab"} do %>
          <%= t ".discount_food" %>
        <% end %>
      </li>
      <li>
        <%= link_to "#outstanding_food", :data => {:toggle => "tab"} do %>
          <%= t ".outstanding_food" %>
        <% end %>
      </li>
    </ul>
  </div>
  <div class="tab-content">
    <div class="tab-pane fade active in img_tag" id="special_food" >
      <% @foods.each do |food| %>
        <div class="col-sm-3">
          <div class="product-image-wrapper">
            <div class="single-products">            
              <div class="productinfo text-center img_rounded">
                <%= image_tag food.image, class: "img-rounded", alt: "ga_1" %>
                <h2><%= number_to_currency(food.price) %></h2>
                <p><%= food.name %></p>
                <%= link_to "#", class: "btn btn-default add-to-cart" do %>
                  <i class="fa fa-shopping-cart">Add to cart</i>
                <% end %>
              </div>              
            </div>
          </div>
        </div>
      <% end %>
      <div class="clearfix"></div>
      <div class="center" align="center">
        <%= link_to "#", class: "btn btn-primary" do %>
          <span class="glyphicon glyphicon-plus-sign"></span>
          <%= t "learn_more" %>
        <% end %>
      </div>
    </div>
    
    <div class="tab-pane fade img_tag" id="discount_food" >
      <% @discountFoods.each do |discountFood| %>
        <div class="col-sm-3">
          <div class="product-image-wrapper">
            <div class="single-products">            
              <div class="productinfo text-center img_rounded">
                <%= image_tag discountFood.image, 
                    class: "img-rounded", alt: "ga_1" %>
                <h2><%= number_to_currency(discountFood.price) %></h2>
                <p><%= discountFood.name %></p>
                <%= link_to "#", class: "btn btn-default add-to-cart" do %>
                  <i class="fa fa-shopping-cart">Add to cart</i>
                <% end %>
              </div>              
            </div>
          </div>
        </div>
      <% end %>
      <div class="clearfix"></div>
      <div class="center" align="center">
        <%= link_to "#", class: "btn btn-primary" do %>
          <span class="glyphicon glyphicon-plus-sign"></span>
          <%= t "learn_more" %>
        <% end %>
      </div>
    </div>
    
    <div class="tab-pane fade img_tag" id="outstanding_food" >
      <% @topFoods.each do |topFood| %>
        <div class="col-sm-3">
          <div class="product-image-wrapper">
            <div class="single-products">            
              <div class="productinfo text-center img_rounded">
                <%= image_tag topFood.image, class: "img-rounded", alt: "ga_1" %>
                <h2><%= number_to_currency(topFood.price) %></h2>
                <p><%= topFood.name %></p>
                <%= link_to "#", class: "btn btn-default add-to-cart" do %>
                  <i class="fa fa-shopping-cart"><%= t ".add_to_cart" %></i>
                <% end %>
              </div>              
            </div>
          </div>
        </div>
      <% end %>
      <div class="clearfix"></div>
      <div class="center" align="center">
        <%= link_to "#", class: "btn btn-primary" do %>
          <span class="glyphicon glyphicon-plus-sign"></span>
          <%= t "learn_more" %>
        <% end %>
      </div>
    </div>

  </div>
</div><!--/category-tab-->
