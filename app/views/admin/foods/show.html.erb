<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= t ".list" %></h1>
  </div>
  <div class="col-lg-12">
    <%= link_to admin_foods_path, class: "btn btn-primary" do %>
      <span class="glyphicon glyphicon-backward"></span>
      <%= t "food_list" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
      </div>
      <div class="panel-body">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th class="text-center"><%= t "._id" %></th>
              <th class="text-center"><%= t ".name" %></th>
              <th class="text-center"><%= t ".image" %></th>
              <th class="text-center"><%= t ".price" %></th>
              <th class="text-center"><%= t ".discount" %></th>
              <th class="text-center"><%= t ".category" %></th>
              <th class="text-center"><%= t ".active" %></th>
              <th class="text-center"><%= t ".description" %></th>
              <th class="text-center"><%= t ".is_top" %></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <% if @food %>
          <%= render "food_detail" %>
          <% else %>
            <tr>
              <td colspan="4" class="text-center">
                <%= t "admin.users.index.nothing" %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
