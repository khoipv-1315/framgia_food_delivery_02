<%= form_for [:admin, @food], :html => {class: "form-horizontal", 
  :multipart => true} do |f| %>
  <%= render 'shared/error_messages', object: @food %>
  <div class="form-group">
    <%= f.label :name, t(".name"), class: "col-md-2 control-label" %>
    <div class="col-md-6">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, t(".price"), class: "col-md-2 control-label" %>
    <div class="col-md-6">
      <%= f.text_field :price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, t(".description"), class: "col-md-2 control-label" %>
    <div class="col-md-6">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :is_top, t(".is_top"), class: "col-md-2 control-label" %>
    <div class="col-md-6">
      <%= f.check_box :is_top %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :actived, t(".actived"), class: "col-md-2 control-label" %>
    <div class="col-md-6">
      <%= f.check_box :actived %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :category, t(".category"), class: "col-md-2 control-label" %>
    <div class="col-md-6">
      <%= f.select :category_id, category_choise, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :discount, t(".discount"), class: "col-md-2 control-label" %>
    <div class="col-md-6">
      <%= f.select :discount_id, discount_choise, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, class: "col-md-2 control-label" %>
    <div class="col-md-6">      
      <%= f.file_field :image, class: "upload-image" %>
      <%= f.hidden_field :image_cache %>
    </div>
    <div class="col-md-6" id="preview"></div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-4">
      <%= f.submit t("admin.categories._form.add"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
