<tr>
  <td class="text-center"><%= discount.id %></td>
  <td class="text-center"><%= discount.discount %></td>
  <td class="text-center"><%= discount.start_date %></td>
  <td class="text-center"><%= discount.end_date %></td>
  <td class="text-center">
    <%= link_to edit_admin_discount_path(discount),
      class: "mike-action mike-action-edit" do %>
      <i class="fa fa-pencil"></i>
    <% end %>
  </td>
  <td class="text-center">
    <%= link_to admin_discount_path(discount), method: :delete,
      class: "mike-action mike-action-delete",
      data: {confirm: t("admin.users._user.confirm_delete")} do %>
      <i class="fa fa-times"></i>
    <% end %>
  </td>
</tr>
