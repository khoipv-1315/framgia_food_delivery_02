<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= t ".list" %></h1>
  </div>
  <div class="col-lg-12">
        <%= link_to new_admin_discount_path, class: "btn btn-primary" do %>
          <span class="glyphicon glyphicon-plus-sign"></span>
          <%= t "add_discount" %>
        <% end %>
      </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= t "admin.users.index.list" %>
      </div>
      <div class="panel-body">
        <table width="100%"
          class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th class="text-center"><%= t "._id" %></th>
              <th class="text-center"><%= t ".discount" %></th>
              <th class="text-center"><%= t ".start_date" %></th>
              <th class="text-center"><%= t ".end_date" %></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <% if @discounts.index.any? %>
          <%= render @discounts %>
          <% else %>
            <tr>
              <td colspan="4" class="text-center">
                <%= t "admin.users.index.nothing" %>
              </td>
            </tr>
          <% end %>
        </table>
        <div>
          <%= will_paginate %>
        </div>
      </div>
    </div>
  </div>
</div>
