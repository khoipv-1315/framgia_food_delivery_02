<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= t "admin.users.index.list" %></h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= t "admin.users.index.list" %>
      </div>
      <div class="panel-body">
        <table width="100%"
          class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th class="text-center"><%= t "._id" %></th>
              <th class="text-center"><%= t ".name" %></th>
              <th class="text-center"><%= t ".email" %></th>
              <th class="text-center"><%= t ".admin" %></th>
              <th class="text-center"><%= t ".avatar" %></th>
              <th class="text-center"><%= t ".phone" %></th>
              <th class="text-center"><%= t ".address" %></th>
              <th></th>
            </tr>
          </thead>
          <% if @users.index.any? %>
          <%= render @users %>
          <% else %>
            <tr>
              <td colspan="4" class="text-center">
                <%= t "admin.users.index.nothing" %>
              </td>
            </tr>
          <% end %>
        </table>
        <div>
          <%= will_paginate %>
        </div>
      </div>
    </div>
  </div>
</div>
