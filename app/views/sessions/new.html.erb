<section id="form"><!--form-->
  <div class="container">
    <div class="row">
      <div class="col-lg-offset-3 col-lg-6">
        <div class="login-form"><!--login form-->
          <h2><%= t ".login_your_account" %></h2>
          <%= form_for :session, url: login_path do |f| %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.text_field :email, placeholder: "Enter your email", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, placeholder: "Enter your password",
                class: "form-control" %>
            </div>
            <div class="text-center">
              <%= f.submit t(".login"), class: "btn btn-info col-lg-12" %>
            </div>
            <div class="text-right">
              <%= link_to t(".register"), new_user_path %>
            </div>
          <% end %>
        </div><!--/login form-->
      </div>
    </div>
  </div>
</section><!--/form-->
